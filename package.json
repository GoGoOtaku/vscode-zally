{
	"name": "zally-openapi-linter",
	"displayName": "Zally OpenAPI Linter",
	"description": "Zally; A minimalistic, simple-to-use API linter",
	"version": "1.0.6",
	"publisher": "GoGoOtaku",
	"repository": "https://github.com/GoGoOtaku/vscode-zally",
	"license": "GPL-3.0-or-later",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:yaml",
		"onLanguage:json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Zally OpenAPI Linter",
			"properties": {
				"zally.serverUrl": {
					"type": "string",
					"default": "http://localhost:8000/",
					"description": "URL to zally linting server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "tslint -p ./"
	},
	"devDependencies": {
		"@types/node": "^8.10.25",
		"@types/vscode": "^1.37.0",
		"ts-loader": "^6.0.4",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1",
		"webpack": "^4.39.3",
		"webpack-cli": "^3.3.7"
	},
	"dependencies": {
		"@types/request": "^2.48.2",
		"request": "^2.88.0"
	}
}
